<meta name="viewport" content="width=device-width"/>
<title>Create</title>
<style>
    .b-box {
        background-color: #faf8f3;
        border: 1px steelblue;
        border-radius: 25px;
        box-shadow: 0px 0px 20px #d8d4d4;
        margin-bottom: 50px;
        margin-top: 50px;
        padding: 41px;
    }

    .bbt { width: 12%; }

    .button_design {
        margin-top: 15px;
        text-align: center;
    }

    .warning {
        border-radius: 9px;
        box-shadow: -1px 4px 1px 1px #34404c;
        font-weight: 400;
        margin-bottom: 11px;
        padding: 10px;
        text-align: center;
        width: 28em;
    }

    .error { color: red; }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12 b-box">
            @using (Html.BeginForm("Create", "BookInfoes", FormMethod.Post, new { name = "insertForm", id = "insertForm", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>BookInfo</h4>
                    <hr/>
                    @Html.ValidationSummary(true)

                    <div class="form-group row" style="margin-bottom: 10px">
                        <div class="col-md-3"> </div>
                        @Html.LabelFor(model => model.BookName, new { @class = "control-label col-md-2" })
                        <div class="col-md-7">
                            <input type="text" name="BookName" value="" class="form-control" required=""/>
                        </div>
                    </div>

                    <div class="form-group row" style="margin-bottom: 10px">
                        <div class="col-md-3"> </div>
                        @Html.LabelFor(model => model.AuthorName, new { @class = "control-label col-md-2" })
                        <div class="col-md-7">
                            <input type="text" name="AuthorName" value="" class="form-control" required=""/>
                        </div>
                    </div>

