<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Library</title>
    <link href="~/Content/custom.css" rel="stylesheet"/>
    <link href="~/Content/animate.min.css" rel="stylesheet"/>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Monoton"/>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/fontawesome.css" rel="stylesheet"/>
    <link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet"/>
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet"/>

</head>
<body>
<nav style="background-color: #152F4F; margin-top: -50px" class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand myclass  animated bounceInLeft" href="#" style="font-family: Monoton;">
        Library
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="menual collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">

        @if (Session["CurrentUserId"] == null)
        {
            <div class="navbar-nav">
                <a class="nav-item nav-link @ViewBag.Login" href="@Url.Action("Login", "Authentication")">
                    <button class="btn btn-primary" style="background-color: #152F4F; height: 45px; width: 110px;"><i class="fas fa-sign-in-alt icn"></i> Login</button>
                </a>
                <a class="nav-item nav-link @ViewBag.Register" href="@Url.Action("Register", "Authentication")">
                    <button class="btn btn-primary" style="background-color: #152F4F; height: 45px; width: 110px;"><i class="fas fa-user-plus"></i> Register</button>
                </a>

            </div>
        }
        @if (Session["CurrentUserId"] != null)
        {
            <div class="navbar-nav">
                <a class="nav-item nav-link @ViewBag.Borrow " href="@Url.Action("Index", "Primary")">
                    <button class="btn btn-primary" style="background-color: #152F4F; height: 45px; width: 120px;"> Borrow </button>
                </a>
                
                <a class="nav-item nav-link @ViewBag.ReturnBook " href="@Url.Action("ReturnBook", "Primary")">
                    <button class="btn btn-primary" style="background-color: #152F4F; height: 45px; width: 120px;"> Return Book </button>
                </a>

                <a class="nav-item nav-link @ViewBag.BookInfo " href="@Url.Action("Index", "BookInfoes")">
                    <button class="btn btn-primary" style="background-color: #152F4F; height: 45px; width: 120px;"> Book </button>
                </a>
                <a class="nav-item nav-link " href="@Url.Action("Logout", "Authentication")">
                    <button class="btn btn-primary" style="background-color: #152F4F; height: 45px; width: 120px;"><i class="fas fa-sign-out-alt"></i> Logout </button>
                </a>
            </div>
        }

    </div>
</nav>
@*<div class="container body-content">*@
@RenderBody()

@*</div>*@


